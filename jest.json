{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "src/auth/**/*.(t|j)s",
    "src/contact/**/*.(t|j)s",
    "src/email-confirmation/**/*.(t|j)s",
    "src/reset-password/**/*.(t|j)s",
    "src/users/**/*.(t|j)s",
    "!src/**/*.module.(t|j)s",
    "!src/**/index.(t|j)s"
  ],
  "coverageDirectory": "../coverage"
}

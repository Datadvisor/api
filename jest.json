{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "moduleNameMapper": {
    "@app/*": "<rootDir>/src/*",
    "@app/config": "<rootDir>/src/config",
    "@app/doc": "<rootDir>/src/doc",
    "@app/logger": "<rootDir>/src/logger"
  },
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "coverageDirectory": "../coverage"
}
